@page "/Login"
@model AuthenAndAutho.Pages.Login.LoginModel
@{
    ViewData["Title"] = "Log in";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form id="account" method="post">
    <div>
        <br /><br /><br /><br /><br />
    </div>
    <div>
        <h3 style="font-weight:bold; color:purple">@ViewData["Title"]</h3>
    </div>
    <div>
        <br />
    </div>
    <div class="col-12 row">
        <input class="form-control col-12" asp-for="Email" placeholder="email address" />
    </div>
    <br />
    <div class="col-12 row">
        <input type="password" class="form-control col-12" asp-for="Password" placeholder="password" />
    </div>
    <br />
    <div class="col-12 row">
        <span class="col-12"></span>
        <input type="submit" class="form-control col-6 btn btn-primary" value="Login" />
    </div>
</form>